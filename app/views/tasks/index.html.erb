<div class="row">
  <% @tasks.each do |task| %>
    <div class="col-sm-4">
      <div class="card">
        <% if task.completed == false %>
          <%= image_tag task.photo, class: "card-img-top" %>
          <%else  %>
          <%= image_tag task.photo, class: "card-img-top", style: "filter: grayscale(100%);" %>
          <%end  %>
            <div class="card-body">
            <p><%= task.title %></p>
            <p><%= task.desc %></p>
            <% if user_signed_in? %>
              <% if current_user.tasks.include?(task) %>
                <p><%= link_to "Cancerlar", task_completed_path(task), class: "btn btn-danger" %>
                  <%else  %>
                <p><%= link_to "Completar", task_completed_path(task), class: "btn btn-success" %>
              <%end  %>
            <% end %>
            <%= link_to "Ver Detalle", task_path(task), class: "btn btn-info" %></p>

            </div>
      </div>
    </div>
    <% end %>
</div>
